<div class="w-full max-w-3xl mx-auto">
  <!-- Header -->
  <h1 class="text-3xl font-extrabold text-center mb-6">Programming Languages</h1>

  <!-- Notice Message -->
  <p class="text-green-600 text-center font-semibold mb-4">
    <%= notice %>
  </p>

  <!-- Programming Languages List -->
  <div id="programming_languages">
    <% @programming_languages.each do |programming_language| %>
      <div class="bg-gray-100 border border-gray-300 rounded-lg p-5 shadow-lg mb-6 hover:bg-gray-200 transition-colors">
        <%= render programming_language %>
        <p class="mt-4 text-center">
          <%= link_to "Show this programming language", programming_language, class: "text-teal-500 hover:underline" %>
        </p>
      </div>
    <% end %>
  </div>

  <!-- New Programming Language Button -->
  <div class="text-center mt-8">
    <%= link_to "New programming language", new_programming_language_path, class: "bg-teal-600 text-white px-6 py-3 rounded-lg shadow-md hover:bg-teal-700 transition-colors" %>
  </div>
</div>



